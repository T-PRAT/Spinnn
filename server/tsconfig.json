{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleDetection": "force",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["bun-types"]
  }
}
